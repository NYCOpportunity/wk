{% include "../partials/head.twig" %}

<body>
  <a href="#main-content" class="sr-only">Skip to main content</a>

  {% if process.env.CONTENT == 'drafts' %}
  <div class="p-3 bg-navy">
    {% include '@src/twig/partials/alert-draft-mode.twig' %}
  </div>
  {% endif %}

  {% include "../partials/header.twig" %}

  <div class="tablet:layout-sidebar tablet:flex items-stretch m-0 p-0 min-h-screen">
    {% include "../partials/navigation.twig" %}

    <main id="main-content" class="color-light-background py-4 tablet:py-8 px-4 desktop:px-6">


      <header class="layout-content tablet:hidden">
        <h2 class="mb-4 mx-auto" data-bind="title">{{ title }}</h2>
      </header>

      {% block container %}
      <article class="layout-content pb-4">
        {% block content %}{% endblock %}
      </article>
      {% endblock %}
    </main>
  </div>

  {% include "../partials/footer.twig" %}

  <script src="{{ global.baseUrl }}/{{ global.entry.scripts }}"></script>

  {% block scripts %}{% endblock %}
</body>
</html>
